<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="MediaFlagsVars">
		<width>134</width>
		<height>91</height>
		<aspectratio aligny="center">keep</aspectratio>
		<colordiffuse>MediaFlags</colordiffuse>
	</include>

	<include name="MediaFlagsVars_Visibility">
		<visible>!Player.HasAudio + !Player.HasVideo + !ListItem.IsFolder</visible>
	</include>
	
	<include name="VideoMediaFlags">
		<control type="group">

			<control type="grouplist">
				<right>46</right>
				<bottom>36</bottom>
				<width>924</width>
				<height>91</height>
				<itemgap>24</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<animation effect="slide" end="474" time="0" condition="Player.HasAudio | Player.HasVideo | ListItem.IsFolder">Conditional</animation>
				<visible>[SubString(Container.FolderPath,videodb://) | SubString(Container.FolderPath,special://) | SubString(Container.FolderPath,library://)] + ![IsEmpty(ListItem.Rating) + IsEmpty(ListItem.VideoResolution) + IsEmpty(ListItem.VideoCodec) + IsEmpty(ListItem.AudioCodec) + IsEmpty(ListItem.AudioChannels) + IsEmpty(ListItem.Studio)]</visible>
				<!--visible>!ListItem.IsFolder + [SubString(Container.FolderPath,videodb://) | SubString(Container.FolderPath,special://) | SubString(Container.FolderPath,library://)] + ![IsEmpty(ListItem.Rating) + IsEmpty(ListItem.VideoResolution) + IsEmpty(ListItem.VideoCodec) + IsEmpty(ListItem.AudioCodec) + IsEmpty(ListItem.AudioChannels) + IsEmpty(ListItem.Studio)]</visible-->

				<!-- Rating flag -->
				<control type="group">
					<width>134</width>
					<height>91</height>
					<animation effect="slide" end="20" time="0" condition="true">Conditional</animation>
					<control type="image">
						<include>MediaFlagsVars</include>
						<texture>flags/rating.png</texture>
					</control>
					<control type="label">
						<width>134</width>
						<height>91</height>
						<align>center</align>
						<aligny>center</aligny>
						<label fallback="?">$INFO[ListItem.Rating]</label>
						<textcolor>MediaFlags</textcolor>
						<font>Font_Cond_64</font>
					</control>
				</control>

				<!-- Source flag -->
				<control type="image">
					<include>MediaFlagsVars</include>
					<!--include>MediaFlagsVars_Visibility</include-->
					<texture>$VAR[Video_Source].png</texture>
				</control>

				<!-- Resolution flag -->
				<control type="image">
					<include>MediaFlagsVars</include>
					<include>MediaFlagsVars_Visibility</include>
					<texture fallback="flags/resolution/default.png">$INFO[ListItem.VideoResolution,flags/resolution/,.png]</texture>
				</control>

				<!-- Video codec flag -->
				<control type="image">
					<include>MediaFlagsVars</include>
					<include>MediaFlagsVars_Visibility</include>
					<texture fallback="flags/videocodec/default.png">$INFO[ListItem.VideoCodec,flags/videocodec/,.png]</texture>
				</control>

				<!-- Audio flag -->
				<control type="group">
					<width>134</width>
					<height>91</height>
					<include>MediaFlagsVars_Visibility</include>
					<control type="image">
						<include>MediaFlagsVars</include>
						<texture fallback="flags/defaultsound.png">$INFO[ListItem.AudioCodec,flags/audio/,.png]</texture>
					</control>
					<control type="image">
						<include>MediaFlagsVars</include>
						<texture>$INFO[ListItem.AudioChannels,flags/audio/,ch.png]</texture>
					</control>
				</control>

				<!-- Studio flag -->
				<control type="group">
					<width>134</width>
					<height>91</height>
					<control type="image" id="8200">
						<include>HiddenControl</include>
						<texture fallback="flags/default.png">$INFO[ListItem.Studio,special://skin/extras/studio/,.png]</texture>
					</control>
					<control type="image">
						<top>10</top>
						<width>109</width>
						<height>70</height>
						<aspectratio aligny="center">keep</aspectratio>
						<colordiffuse>MediaFlags</colordiffuse>
						<texture fallback="flags/default.png">$INFO[ListItem.Studio,special://skin/extras/studio/,.png]</texture>
						<animation effect="zoom" end="85,85" center="auto" time="0" condition="StringCompare(Control.GetLabel(8200),flags/default.png)">Conditional</animation>
					</control>
				</control>
				
			</control>
		</control>
		
	</include>

</includes>