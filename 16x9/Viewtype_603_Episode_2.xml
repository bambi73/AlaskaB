<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="Viewtype_603_Episode_Title_FO">
    <height>46</height>
    <textcolor>TextHeavy</textcolor>
    <font>Font_Black_Caps_53</font>
    <label>$VAR[Title_Detail_603]</label>
  </include>

  <include name="Viewtype_603_Episode_Aired_FO">
    <control type="label">
      <top>50</top>
      <height>34</height>
      <textcolor>TextLight</textcolor>
      <font>Font_Light_Caps_34</font>
      <label>$INFO[Container(603).ListItem.Date,$LOCALIZE[31117]: ]$VAR[Episode_Insert_603]$INFO[Container(603).ListItem.Duration,, $LOCALIZE[31118]]</label>
      <visible>!Skin.HasSetting(AlaskaB.VideoNav.Episode.Plot.Enable) | IsEmpty(Container(603).ListItem.Plot)</visible>
    </control>
  </include>

  <include name="Viewtype_603_Episode_Plot_FO">
    <top>49</top>
    <height>120</height>
    <align>left</align>
    <textcolor>TextLight</textcolor>
    <font>Font_Light_34</font>
    <label>$INFO[Container(603).ListItem.Plot]</label>
    <visible>Skin.HasSetting(AlaskaB.VideoNav.Episode.Plot.Enable) + !IsEmpty(Container(603).ListItem.Plot)</visible>
    <autoscroll time="3600" delay="10000" repeat="6000">Skin.HasSetting(AlaskaB.VideoNav.Episode.Plot.AutoScroll.Enable)</autoscroll>
  </include>

  <include name="Viewtype_603_Episode_2">
    <control type="group">
      <visible>Control.IsVisible(603)</visible>

      <control type="group" id="5000">
        <include>AlaskaB_VideoNav_Region_TopLeft</include>
        <include>Animation_HiddenByInfo</include>

        <control type="group">
          <animation effect="slide" end="0,12" time="200" condition="Container(603).Row(0)">Conditional</animation>
          <animation effect="slide" end="0,6" time="200" condition="Container(603).Row(1)">Conditional</animation>
          <animation effect="slide" end="0,0" time="200" condition="Container(603).Row(2)">Conditional</animation>
          <animation effect="slide" end="0,-6" time="200" condition="Container(603).Row(3)">Conditional</animation>
          <animation effect="slide" end="0,-12" time="200" condition="Container(603).Row(4)">Conditional</animation>

          <control type="list" id="603">
            <left>200</left>
            <top>66</top>
            <width>1520</width>
            <height>624</height>
            <onup>603</onup>
            <ondown>603</ondown>
            <onleft>7000</onleft>
            <onright condition="Control.IsVisible(8800)">8800</onright>
            <onright condition="!Control.IsVisible(8800)">7000</onright>
            <pagecontrol>8800</pagecontrol>
            <scrolltime>0</scrolltime>
            <orientation>vertical</orientation>
            <viewtype label="Episode 2">list</viewtype>
            <visible>Container.Content(episodes) | Container.Content(musicvideos)</visible>

            <itemlayout width="1520" height="94">
              <control type="label">
                <top>24</top>
                <width>250</width>
                <height>66</height>
                <align>right</align>
                <textcolor>TextLight</textcolor>
                <font>Font_Black_Caps_66</font>
                <label>$VAR[Episode_Number,,.]</label>
              </control>
              <control type="label">
                <left>270</left>
                <top>20</top>
                <width>1250</width>
                <height>42</height>
                <textcolor>TextLight</textcolor>
                <font>Font_Black_Caps_42</font>
                <label>$VAR[Title_Detail]</label>
                <animation effect="slide" end="0,14" condition="IsEmpty(ListItem.Date) + IsEmpty(ListItem.Duration)">Conditional</animation>
              </control>
              <control type="label">
                <left>270</left>
                <top>60</top>
                <width>1250</width>
                <height>32</height>
                <textcolor>TextLight</textcolor>
                <font>Font_Light_Caps_32</font>
                <label>$INFO[ListItem.Date,$LOCALIZE[31117]: ]$VAR[Episode_Insert]$INFO[ListItem.Duration,, $LOCALIZE[31118]]</label>
              </control>
            </itemlayout>

            <focusedlayout width="1520" height="248">
              <control type="image">
                <left>34</left>
                <top>27</top>
                <width>378</width>
                <height>213</height>
                <visible>SubString(ListItem.Icon,Default)</visible>
                <animation type="Focus" reversible="false">
                  <effect type="zoom" center="208,123" start="94" end="100" time="125" tween="cubic" easing="out" />
                  <effect type="fade" start="90" end="100" time="125" />
                </animation>
                <texture>$INFO[ListItem.ActualIcon]</texture>
                <aspectratio align="center">keep</aspectratio>
              </control>
              <control type="group">
                <left>28</left>
                <top>21</top>
                <width>390</width>
                <height>225</height>
                <visible>!SubString(ListItem.Icon,Default)</visible>
                <animation type="Focus" reversible="false">
                  <effect type="zoom" center="auto" start="94" end="100" time="125" tween="cubic" easing="out" />
                  <effect type="fade" start="90" end="100" time="125" />
                </animation>
                <control type="image">
                  <width>390</width>
                  <height>225</height>
                  <texture colordiffuse="Light">video/episode-frame.png</texture>
                  </control>
                <control type="image">
                  <left>6</left>
                  <top>6</top>
                  <width>378</width>
                  <height>213</height>
                  <aspectratio scalediffuse="false">scale</aspectratio>
                  <texture diffuse="video/episode-matte.png">$INFO[ListItem.Icon]</texture>
                </control>
              </control>
              <control type="button">
                <include>HiddenControl</include>
                <onfocus>SetProperty(AlaskaB.ListItem.SourceName,$ESCINFO[ListItem.FileName],home)</onfocus>
              </control>
            </focusedlayout>
          </control>

          <!-- Focus details -->
          <control type="grouplist">
            <left>666</left>
            <top>117</top>
            <width>1104</width>
            <itemgap>20</itemgap>
            <orientation>horizontal</orientation>
            <usecontrolcoords>true</usecontrolcoords>
            <animation effect="slide" end="0,94" time="0" condition="Container(603).Row(1)">Conditional</animation>
            <animation effect="slide" end="0,188" time="0" condition="Container(603).Row(2)">Conditional</animation>
            <animation effect="slide" end="0,282" time="0" condition="Container(603).Row(3)">Conditional</animation>
            <animation effect="slide" end="0,376" time="0" condition="Container(603).Row(4)">Conditional</animation>
            <animation effect="slide" end="0,40" time="0" condition="!Skin.HasSetting(AlaskaB.VideoNav.Episode.Plot.Enable) | IsEmpty(Container(603).ListItem.Plot)">Conditional</animation>

            <control type="label">
              <top>8</top>
              <width>auto</width>
              <height>66</height>
              <align>right</align>
              <textcolor>TextHeavy</textcolor>
              <font>Font_Black_Caps_66</font>
              <label>$INFO[Container(603).ListItem.Episode,,.]</label>
            </control>
            <control type="group">
              <visible>!SubString(Container(603).ListItem.Episode,S,left) + !IntegerGreaterThan(Container(603).ListItem.Episode,9)</visible> 
              <control type="fadelabel">
                <width>980</width>
                <include>Viewtype_603_Episode_Title_FO</include>
              </control>
              <include>Viewtype_603_Episode_Aired_FO</include>
              <control type="textbox">
                <width>980</width>
                <include>Viewtype_603_Episode_Plot_FO</include>
              </control>
            </control>
            <control type="group">
              <visible>SubString(Container(603).ListItem.Episode,S,left) | [IntegerGreaterThan(Container(603).ListItem.Episode,9) + !IntegerGreaterThan(Container(603).ListItem.Episode,99)]</visible> 
              <control type="fadelabel">
                <width>940</width>
                <include>Viewtype_603_Episode_Title_FO</include>
              </control>
              <include>Viewtype_603_Episode_Aired_FO</include>
              <control type="textbox">
                <width>940</width>
                <include>Viewtype_603_Episode_Plot_FO</include>
              </control>
            </control>
            <control type="group">
              <visible>!SubString(Container(603).ListItem.Episode,S,left) + IntegerGreaterThan(Container(603).ListItem.Episode,99)</visible> 
              <control type="fadelabel">
                <width>900</width>
                <include>Viewtype_603_Episode_Title_FO</include>
              </control>
              <include>Viewtype_603_Episode_Aired_FO</include>
              <control type="textbox">
                <width>900</width>
                <include>Viewtype_603_Episode_Plot_FO</include>
              </control>
            </control>
          </control>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="8800">
          <description>InfoList scrollbar</description>
          <left>1902</left>
          <top>63</top>
          <height>650</height>
          <onleft>500</onleft>
          <onright>7000</onright>
          <include>Animation_HiddenByInfo</include>
          <visible>Skin.HasSetting(AlaskaB.Settings.VideoNav.Scrollbar.Enable)</visible>
        </control>
      </control>
    </control>
  </include>
</includes>

