<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype_650_Info_List_2">

		<control type="group">
			<visible>Control.IsVisible(650)</visible>

			<!-- Browser -->
			<control type="group" id="5000">
				<top>TopOffset</top>
				<left>LeftOffset</left>
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_ZoomedByMenu</include>
				<include>Animation_HiddenByInfo</include>

				<control type="fixedlist" id="650">
					<left>840</left>
					<top>207</top>
					<height>648</height>
					<width>1032</width>
					<onup>650</onup>
					<ondown>650</ondown>
					<onleft>7000</onleft>
					<onright>7000</onright>
					<focusposition>3</focusposition>
					<orientation>vertical</orientation>
					<viewtype label="Info List">list</viewtype>
					<scrolltime>0</scrolltime>
					<visible>[Container.Content(movies) + SubString(Container.FolderPath,videodb://movies/titles/)] | [Container.Content(tvshows) + SubString(Container.FolderPath,videodb://tvshows/titles/)] | [Container.Content(seasons) + SubString(Container.FolderPath,videodb://tvshows/titles/)]</visible>
					<itemlayout width="1691" height="82">
						<control type="group">
							<left>30</left>
							<control type="label">
								<width>972</width>
								<height>42</height>
								<label>$VAR[Title_Detail]</label>
								<font>Font_Black_Caps_42</font>
								<textcolor>MedLight</textcolor>
							</control>
							<control type="label">
								<top>38</top>
								<width>972</width>
								<height>32</height>
								<label>$INFO[ListItem.Property(TotalEpisodes)] Episodes</label>
								<font>Font_Light_Caps_32</font>
								<textcolor>MedLight</textcolor>
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="1691" height="156">
						<control type="image">
							<width>1032</width>
							<height>143</height>
							<aligny>center</aligny>
							<texture>InfoListButton.png</texture>
						</control>
						<control type="group">
							<left>30</left>
							<top>14</top>
							<control type="fadelabel">
								<width>972</width>
								<height>46</height>
								<label>$VAR[Title_Detail]</label>
								<font>Font_Black_Caps_53</font>
								<textcolor>Heavy</textcolor>
							</control>
							<control type="label">
								<top>48</top>
								<width>972</width>
								<height>34</height>
								<label>$INFO[ListItem.Genre]</label>
								<font>Font_Light_Caps_34</font>
								<textcolor>MedLight</textcolor>
							</control>
							<control type="label">
								<top>78</top>
								<width>972</width>
								<height>34</height>
								<label>$INFO[ListItem.Property(TotalEpisodes)] Episodes • $INFO[ListItem.Property(UnWatchedEpisodes)] Unwatched</label>
								<font>Font_Light_Caps_34</font>
								<textcolor>MedLight</textcolor>
							</control>
						</control>
						<control type="button">
							<include>HiddenControl</include>
							<onfocus>SetProperty(ListItem.AlaskaB.SourceName,$ESCINFO[ListItem.FolderName],home)</onfocus>
						</control>
					</focusedlayout>
				</control>

				<control type="group">
					<left>300</left>
					<top>140</top>
					<visible>!SubString(ListItem.Icon,Default)</visible>
					<control type="group">
						<visible>!Window.IsActive(movieinformation)</visible>
						<!--include>Animation_PosterInfoSlide</include-->  <!-- ??? -->
						<control type="image">
							<left>6</left>
							<top>28</top>
							<width>480</width>
							<height>718</height>
							<texture background="true" diffuse="poster/Poster_Matte_FO.png">$INFO[ListItem.Icon]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<left>-23</left>
							<top>0</top>
							<width>538</width>
							<height>772</height>
							<texture>poster/Poster_Frame_FO.png</texture>
						</control>
						<control type="image">
							<left>420</left>
							<top>678</top>
							<width>48</width>
							<height>48</height>
							<texture>$VAR[Status_Overlay]</texture>
						</control>
						<control type="image">
							<left>420</left>
							<top>678</top>
							<width>48</width>
							<height>48</height>
							<texture>common/Overlay_New.png</texture>
							<visible>SubString(Window(movieinformation).Property(flag),true)</visible>
							<animation effect="slide" end="-54,0" condition="[!Skin.HasSetting(HideWatchedOverlays) + StringCompare(ListItem.Overlay,OverlayWatched.png)] | [!Skin.HasSetting(HideResumeOverlays) + ListItem.IsResumable]">Conditional</animation>
						</control>
					</control>
				</control>					
				
			</control>
		</control>

	</include>

</includes>
