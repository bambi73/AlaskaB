<?xml version="1.0" encoding="UTF-8"?>
<window id="100">
  <defaultcontrol always="true">10</defaultcontrol>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>

  <controls>
    <control type="group" id="5000">
      <centertop>49%</centertop>
      <centerleft>50%</centerleft>
      <width>DialogProgressWidth</width>
      <height>DialogProgressHeight</height>

      <include>Animation_ZoomInMenu</include>
      <animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(DialogYesNo.xml)">
        <include>AnimationEffect_ZoomedBy</include>
      </animation>

      <control type="image">
        <width>DialogProgressWidth</width>
        <height>DialogProgressHeight</height>
        <texture>dialogs/progress-bg.png</texture>
      </control>

      <control type="label" id="1">
        <top>37</top>
        <centerleft>50%</centerleft>
        <width>DialogProgressControlWidth</width>
        <height>42</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>Font_Black_Caps_42</font>
      </control>
      <control type="textbox" id="9">
        <top>128</top>
        <centerleft>50%</centerleft>
        <width>DialogProgressControlWidth</width>
        <height>130</height>
        <align>center</align>
        <font>Font_Light_Caps_34</font>
      </control>

      <control type="progress" id="20">
        <top>273</top>
        <centerleft>50%</centerleft>
        <width>820</width>
        <info>System.Progressbar</info>
      </control>

      <control type="button" id="10">
        <top>311</top>
        <width>DialogProgressControlWidth</width>
        <include>DialogBottomButton1Center</include>
        <animation type="Conditional" condition="Control.HasFocus(10)" reversible="false">
          <include>AnimationEffect_DialogBottomButton1CenterFocus</include>
        </animation>
        <animation type="Conditional" condition="!Control.HasFocus(10)" reversible="false">
          <include>AnimationEffect_DialogBottomButton1CenterUnfocus</include>
        </animation>
      </control>
    </control>
  </controls>

</window>