  <include name="AnimationEffect_ZoomedBy">
    <effect type="zoom" time="400" center="CenterX,CenterY" start="100" end="50" tween="cubic" easing="inout" />
    <effect type="fade" time="400" start="100" end="0" tween="cubic" easing="out" />
  </include>

  <include name="Animation_ZoomedByMenu">
    <animation type="Conditional" condition="!ControlGroup(5000).HasFocus | Window.IsActive(contextmenu) | Window.IsActive(shutdownmenu) | Window.IsActive(filebrowser) | Window.IsActive(DialogSelect.xml) | Window.IsActive(DialogYesNo.xml) | Window.IsActive(progressdialog) | Window.IsActive(okdialog)">
      <include>AnimationEffect_ZoomedBy</include>
    </animation>
  </include>

  <include name="Animation_ZoomedByShutdownMenu">
    <animation type="Conditional" condition="Window.IsActive(shutdownmenu)">
