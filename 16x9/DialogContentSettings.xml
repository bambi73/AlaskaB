<?xml version="1.0" encoding="UTF-8"?>
<window id="132">
  <defaultcontrol always="true">20</defaultcontrol>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>

  <controls>
    <control type="group" id="5000">
      <centertop>49%</centertop>
      <left>DialogContentSettingsLeft</left>
      <width>DialogContentSettingsWidth</width>
      <height>DialogContentSettingsHeight</height>

      <include>Animation_ZoomInMenu</include>
      <animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(progressdialog) | Window.IsActive(okdialog) | Window.IsActive(virtualkeyboard) | Window.IsActive(filebrowser)">
        <include>AnimationEffect_ZoomedBy</include>
      </animation>

      <control type="image">
        <width>DialogContentSettingsWidth</width>
        <height>DialogContentSettingsHeight</height>
        <texture>dialogs/content-settings-bg.png</texture>
      </control>

      <control type="label">
        <top>37</top>
        <centerleft>50%</centerleft>
        <width>DialogContentSettingsControlWidth</width>
        <height>42</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>Font_Black_Caps_42</font>
        <label>$LOCALIZE[20333]</label>
      </control>

      <control type="group">
        <left>160</left>
        <top>117</top>

        <!-- Content Picker -->
        <control type="spincontrolex" id="20">
          <left>46</left>
          <width>510</width>
          <height>66</height>
          <align>left</align>
          <onleft>9010</onleft>
          <onright>5</onright>
          <ondown>21</ondown>
        </control>

        <!-- Scraper list -->
        <control type="list" id="21">
          <top>84</top>
          <left>46</left>
          <width>490</width>
          <height>330</height>
          <onright>5</onright>
          <onup>20</onup>
          <ondown>9010</ondown>
          <onleft>9010</onleft>
          <scrolltime tween="sine" easing="out">320</scrolltime>
          <itemlayout width="490" height="66">
            <control type="label">
              <width>490</width>
              <height>66</height>
              <align>right</align>
              <textcolor>TextLight</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
          </itemlayout>
          <focusedlayout width="490" height="66">
            <control type="label">
              <width>490</width>
              <height>66</height>
              <scroll>true</scroll>
              <align>right</align>
              <textcolor>TextHeavy</textcolor>
              <selectedcolor>TextHeavy</selectedcolor>
              <label>$INFO[ListItem.Label]</label>
              <animation effect="zoom" center="450,33" start="100" end="105" time="50" tween="cubic" easing="out">Focus</animation>
            </control>
          </focusedlayout>
        </control>

        <!-- Control grouplist -->
        <control type="grouplist" id="5">
          <left>650</left>
          <top>84</top>
          <width>1050</width>
          <height>330</height>
          <itemgap>0</itemgap>
          <onleft condition="!Control.IsVisible(21)">20</onleft>
          <onleft condition="Control.IsVisible(21)">21</onleft>
          <onright>9010</onright>
          <ondown>9010</ondown>
          <orientation>vertical</orientation>
          <scrolltime tween="sine" easing="out">320</scrolltime>
        </control>
        <control type="button" id="7">
          <include>DialogContentSettingsRightGLTemplate</include>
        </control>
        <control type="radiobutton" id="8">
          <include>DialogContentSettingsRightGLTemplate</include>
          <textwidth>910</textwidth>
        </control>
      </control>

      <!-- Button grouplist -->
      <control type="grouplist" id="9010">
        <include>DialogBottomButtonGrouplist</include>
        <width>DialogContentSettingsControlWidth</width>
        <top>552</top>
        <onup>5</onup>
        <!-- OK -->
        <control type="button" id="28">
          <label>$LOCALIZE[20177]</label>
          <include>DialogBottomButton3Left</include>
          <animation type="Conditional" condition="Control.HasFocus(28)" reversible="false">
            <include>AnimationEffect_DialogBottomButton3LeftFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(28)" reversible="false">
            <include>AnimationEffect_DialogBottomButton3LeftUnfocus</include>
          </animation>
        </control>
        <!-- Cancel -->
        <control type="button" id="29">
          <label>$LOCALIZE[222]</label>
          <include>DialogBottomButton3Center</include>
          <animation type="Conditional" condition="Control.HasFocus(29)" reversible="false">
            <include>AnimationEffect_DialogBottomButton3CenterFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(29)" reversible="false">
            <include>AnimationEffect_DialogBottomButton3CenterUnfocus</include>
          </animation>
        </control>
        <!-- Settings -->
        <control type="button" id="22">
          <label>$LOCALIZE[5]</label>
          <include>DialogBottomButton3Right</include>
          <animation type="Conditional" condition="Control.HasFocus(22)" reversible="false">
            <include>AnimationEffect_DialogBottomButton3RightFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(22)" reversible="false">
            <include>AnimationEffect_DialogBottomButton3RightUnfocus</include>
          </animation>
        </control>
      </control>
    </control>
  </controls>

</window>
