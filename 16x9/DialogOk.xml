<?xml version="1.0" encoding="UTF-8"?>
<window id="100">
  <defaultcontrol always="true">10</defaultcontrol>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>

  <controls>
    <control type="group" id="5000">
      <top>322</top>
      <left>0</left>
      <width>FullWidth</width>
      <height>396</height>
      <include>Animation_ZoomInMenu</include>
      <animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(progressdialog) | Window.IsActive(DialogYesNo.xml)">
        <include>AnimationEffect_ZoomedBy</include>
      </animation>

      <control type="image">
        <left>300</left>
        <width>1320</width>
        <height>396</height>
        <texture>dialogs/yesno-ok-bg.png</texture>
      </control>

      <control type="label" id="1">
        <top>37</top>
        <centerleft>50%</centerleft>
        <width>DialogConfirmControlWidth</width>
        <height>42</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>Font_Black_Caps_42</font>
      </control>
      <control type="textbox" id="9">
        <top>128</top>
        <centerleft>50%</centerleft>
        <width>DialogConfirmControlWidth</width>
        <height>130</height>
        <align>center</align>
        <font>Font_Light_Caps_34</font>
      </control>
      <control type="button" id="10">
        <top>272</top>
        <include>DialogConfirmButtonCenter</include>
        <animation type="Conditional" condition="Control.HasFocus(10)" reversible="false">
          <include>AnimationEffect_DialogConfirmButtonCenterFocus</include>
        </animation>
        <animation type="Conditional" condition="!Control.HasFocus(10)" reversible="false">
          <include>AnimationEffect_DialogConfirmButtonCenterUnfocus</include>
        </animation>
      </control>
    </control>
  </controls>

</window>