<?xml version="1.0" encoding="UTF-8"?>
<window id="129">
  <defaultcontrol always="true">12</defaultcontrol>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>

  <controls>
    <control type="group" id="5000">
      <centertop>49%</centertop>
      <centerleft>50%</centerleft>
      <width>DialogMediaSourceWidth</width>
      <height>DialogMediaSourceHeight</height>

      <include>Animation_ZoomInMenu</include>
      <animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(progressdialog) | Window.IsActive(okdialog) | Window.IsActive(virtualkeyboard) | Window.IsActive(filebrowser)">
        <include>AnimationEffect_ZoomedBy</include>
      </animation>

      <control type="image">
        <width>DialogMediaSourceWidth</width>
        <height>DialogMediaSourceHeight</height>
        <visible>!Control.IsVisible(8800)</visible>
        <texture>dialogs/media-source-bg.png</texture>
      </control>
      <control type="image">
        <width>DialogMediaSourceWidth</width>
        <height>DialogMediaSourceHeight</height>
        <visible>Control.IsVisible(8800)</visible>
        <texture>dialogs/media-source-bg-scrollbar.png</texture>
      </control>

      <control type="label" id="2">
        <top>37</top>
        <centerleft>50%</centerleft>
        <width>1420</width>
        <height>42</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>Font_Black_Caps_42</font>
      </control>
      <control type="edit" id="12">
        <top>116</top>
        <centerleft>50%</centerleft>
        <width>1300</width>
        <height>66</height>
        <align>center</align>
        <aligny>center</aligny>
        <ondown>10</ondown>
      </control>

      <control type="group">
        <left>75</left>
        <top>208</top>

        <control type="grouplist" id="9000">
          <width>420</width>
          <height>210</height>
          <itemgap>0</itemgap>
          <onright>10</onright>
          <onup>noop</onup>
          <ondown>noop</ondown>
          <orientation>vertical</orientation>
          <scrolltime tween="sine" easing="out">320</scrolltime>
          <!-- Browse -->
          <control type="button" id="11">
            <include>DialogMediaSourceLeftGLButton</include>
            <label>$LOCALIZE[1024]</label>
          </control>
          <!-- Add -->
          <control type="button" id="13">
            <include>DialogMediaSourceLeftGLButton</include>
            <label>$LOCALIZE[15019]</label>
          </control>
          <!-- Remove -->
          <control type="button" id="14">
            <include>DialogMediaSourceLeftGLButton</include>
            <label>$LOCALIZE[1210]</label>
          </control>
        </control>

        <control type="list" id="10">
          <left>480</left>
          <width>850</width>
          <height>210</height>
          <onleft>9000</onleft>
          <onup>12</onup>
          <ondown>9010</ondown>
          <onright>8800</onright>
          <pagecontrol>8800</pagecontrol>
          <orientation>vertical</orientation>
          <scrolltime tween="sine" easing="out">320</scrolltime>
          <itemlayout width="850" height="66">
            <control type="label">
              <width>850</width>
              <height>66</height>
              <textcolor>TextLight</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
          </itemlayout>
          <focusedlayout width="850" height="66">
            <control type="label">
              <width>850</width>
              <height>66</height>
              <scroll>true</scroll>
              <textcolor>TextHeavy</textcolor>
              <selectedcolor>TextHeavy</selectedcolor>
              <label>$INFO[ListItem.Label]</label>
              <animation effect="zoom" center="50,33" start="100" end="104" time="50" tween="cubic" easing="out">Focus</animation>
            </control>
          </focusedlayout>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="8800">
          <top>15</top>
          <left>1356</left>
          <height>170</height>
          <onleft>10</onleft>
          <visible>Skin.HasSetting(AlaskaB.Settings.MediaSource.Scrollbar.Enable)</visible>
        </control>
      </control>

      <control type="grouplist" id="9010">
        <top>423</top>
        <onup>10</onup>
        <include>DialogConfirmButtonGrouplist</include>
        <!-- OK -->
        <control type="button" id="18">
          <label>$LOCALIZE[20177]</label>
          <include>DialogConfirmButtonLeft</include>
          <animation type="Conditional" condition="Control.HasFocus(18)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonLeftFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(18)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonLeftUnfocus</include>
          </animation>
        </control>
        <!-- Cancel -->
        <control type="button" id="19">
          <label>$LOCALIZE[222]</label>
          <include>DialogConfirmButtonRight</include>
          <animation type="Conditional" condition="Control.HasFocus(19)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonRightFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(19)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonRightUnfocus</include>
          </animation>
        </control>
      </control>
    </control>
  </controls>

</window>
