<?xml version="1.0" encoding="UTF-8"?>
<window id="12">
  <defaultcontrol always="true">3</defaultcontrol>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>

  <controls>
    <include>Global_Background</include>

    <control type="group" id="5000">
      <centertop>50%</centertop>
      <left>SettingsCategoryLeft</left>
      <width>SettingsCategoryWidth</width>
      <height>SettingsCategoryHeight</height>

      <!-- <include>Animation_ZoomInMenu</include> -->
      <include>Animation_ZoomedByMenu</include>
      <include>Animation_ZoomInZoomOut</include>

      <control type="image">
        <width>SettingsCategoryWidth</width>
        <height>SettingsCategoryHeight</height>
        <visible>!Control.IsVisible(8800)</visible>
        <texture>settings/settings-category-bg.png</texture>
      </control>
      <control type="image">
        <width>SettingsCategoryWidth</width>
        <height>SettingsCategoryHeight</height>
        <visible>Control.IsVisible(8800)</visible>
        <texture>settings/settings-category-scrollbar-bg.png</texture>
      </control>

      <control type="group">
        <left>160</left>

        <!-- Left grouplist -->
        <control type="grouplist" id="3">
          <left>SettingsCategoryLeftGLLeft</left>
          <top>SettingsCategoryGLTop</top>
          <width>SettingsCategoryLeftGLWidth</width>
          <height>SettingsCategoryGLHeight</height>
          <itemgap>0</itemgap>
          <onright>5</onright>
          <onup>noop</onup>
          <ondown>20</ondown>
          <orientation>vertical</orientation>
          <scrolltime tween="sine" easing="out">320</scrolltime>
        </control>

        <!-- Settings level -->
        <control type="group">
          <left>SettingsCategoryLeftGLLeft</left>
          <top>614</top>
          <control type="button" id="20">
            <height>66</height>
            <onup>3</onup>
            <onclick>SettingsLevelChange</onclick>
            <include>SettingsCategoryLeftGLTemplate</include>
          </control>
        </control>

        <!-- Right grouplist -->
        <control type="grouplist" id="5">
          <left>SettingsCategoryRightGLLeft</left>
          <top>SettingsCategoryGLTop</top>
          <width>SettingsCategoryRightGLWidth</width>
          <height>SettingsCategoryGLHeight</height>
          <itemgap>0</itemgap>
          <onleft>3</onleft>
          <onright>8800</onright>
          <pagecontrol>8800</pagecontrol>
          <orientation>vertical</orientation>
          <scrolltime tween="sine" easing="out">320</scrolltime>
        </control>

        <!-- Settings descriptions -->
        <control type="textbox" id="6">
          <include>SettingsCategoryDescription</include>
          <visible>ControlGroup(5).HasFocus</visible>
        </control>
        <control type="textbox">
          <label>10047</label>
          <include>SettingsCategoryDescription</include>
          <visible>Control.HasFocus(20)</visible>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="8800">
          <left>1809</left>
          <top>52</top>
          <height>496</height>
          <onleft>5</onleft>
          <visible>Skin.HasSetting(AlaskaB.Settings.SettingsCategory.Scrollbar.Enable)</visible>
        </control>
      </control>
    </control>

    <!-- Left grouplist control template -->
    <control type="button" id="10">
      <include>SettingsCategoryLeftGLTemplate</include>
    </control>

    <!-- Right grouplist control templates -->
    <control type="edit" id="12">
      <include>SettingsCategoryRightGLTemplate</include>
    </control>
    <control type="button" id="7">
      <include>SettingsCategoryRightGLTemplate</include>
    </control>
    <control type="radiobutton" id="8">
      <include>SettingsCategoryRightGLTemplateWithText</include>
    </control>
    <control type="spincontrolex" id="9">
      <include>SettingsCategoryRightGLTemplateWithText</include>
    </control>
  </controls>

</window>