<?xml version="1.0" encoding="UTF-8"?>
<window id="126">
  <defaultcontrol always="true">450</defaultcontrol>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>

  <controls>
    <control id="5000" type="group">
      <centertop>49%</centertop>
      <centerleft>50%</centerleft>
      <width>DialogFileBrowserWidth</width>
      <height>DialogFileBrowserHeight</height>

      <include>Animation_ZoomInMenu</include>
      <animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(progressdialog) | Window.IsActive(okdialog) | Window.IsActive(virtualkeyboard)">
        <include>AnimationEffect_ZoomedBy</include>
      </animation>

      <control type="image">
        <width>DialogFileBrowserWidth</width>
        <height>DialogFileBrowserHeight</height>
        <visible>!Control.IsVisible(8800)</visible>
        <texture>dialogs/file-browser-bg.png</texture>
      </control>
      <control type="image">
        <width>DialogFileBrowserWidth</width>
        <height>DialogFileBrowserHeight</height>
        <visible>Control.IsVisible(8800)</visible>
        <texture>dialogs/file-browser-bg-scrollbar.png</texture>
      </control>

      <!-- Heading label -->
      <control type="label" id="411">
        <top>37</top>
        <centerleft>50%</centerleft>
        <width>1520</width>
        <height>42</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>Font_Black_Caps_42</font>
      </control>
      
      <control type="group">
        <left>125</left>
        <top>118</top>

        <!-- Image -->
        <control type="group">
          <left>40</left>
          <top>24</top>
          <control type="group">  
            <visible>Control.IsEnabled(415)</visible>
            <control type="image">
              <include>DialogFileBrowserImage1</include>
              <height>360</height>
            </control>
            <control type="image">
              <include>DialogFileBrowserImage2</include>
              <height>360</height>
            </control>
            <control type="image">
              <include>DialogFileBrowserImage3</include>
              <height>360</height>
            </control>
          </control>
          <control type="group">  
            <visible>!Control.IsEnabled(415)</visible>
            <control type="image">
              <include>DialogFileBrowserImage1</include>
              <height>418</height>
            </control>
            <control type="image">
              <include>DialogFileBrowserImage2</include>
              <height>418</height>
            </control>
            <control type="image">
              <include>DialogFileBrowserImage3</include>
              <height>418</height>
            </control>
          </control>
        </control>

        <!-- New folder -->
        <control type="group">
          <top>396</top>
          <left>40</left>
          <control type="button" id="415">
            <width>420</width>
            <align>right</align>
            <onright>450</onright>
            <ondown>9010</ondown>
            <label>$LOCALIZE[119]</label>
            <visible>Control.IsEnabled(415)</visible>
            <animation effect="zoom" center="380,33" start="100" end="105" time="50" tween="cubic" easing="out">Focus</animation>
          </control>
        </control>

        <!-- File list -->
        <control type="list" id="450">
          <left>550</left>
          <width>780</width>
          <height>462</height>
          <onleft>415</onleft>
          <ondown>9010</ondown>
          <onright>8800</onright>
          <pagecontrol>8800</pagecontrol>
          <orientation>vertical</orientation>
          <preloaditems>5</preloaditems>
          <scrolltime tween="sine" easing="out">320</scrolltime>
          <itemlayout width="850" height="66">
            <control type="image">
              <include>HiddenControl</include>
              <texture>$INFO[ListItem.Icon]</texture>
            </control>
            <control type="label">
              <width>850</width>
              <height>66</height>
              <textcolor>TextLight</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
          </itemlayout>
          <focusedlayout width="850" height="66">
            <control type="image">
              <include>HiddenControl</include>
              <texture>$INFO[ListItem.Icon]</texture>
            </control>
            <control type="label">
              <width>765</width>
              <height>66</height>
              <scroll>true</scroll>
              <textcolor>TextHeavy</textcolor>
              <selectedcolor>TextHeavy</selectedcolor>
              <label>$INFO[ListItem.Label]</label>
              <animation effect="zoom" center="125,33" start="100" end="105" time="50" tween="cubic" easing="out">Focus</animation>
            </control>
          </focusedlayout>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="8800">
          <top>17</top>
          <left>1419</left>
          <height>427</height>
          <onleft>450</onleft>
          <onright>9010</onright>
          <visible>Skin.HasSetting(AlaskaB.Settings.FileBrowser.Scrollbar.Enable)</visible>
        </control>
      </control>

      <control type="grouplist" id="9010">
        <top>597</top>
        <onup>450</onup>
        <include>DialogConfirmButtonGrouplist</include>
        <!-- OK -->
        <control type="button" id="413">
          <label>$LOCALIZE[20177]</label>
          <include>DialogConfirmButtonLeft</include>
          <animation type="Conditional" condition="Control.HasFocus(413)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonLeftFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(413)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonLeftUnfocus</include>
          </animation>
        </control>
        <!-- Cancel -->
        <control type="button" id="414">
          <label>$LOCALIZE[222]</label>
          <include>DialogConfirmButtonRight</include>
          <animation type="Conditional" condition="Control.HasFocus(414)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonRightFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(414)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonRightUnfocus</include>
          </animation>
        </control>
      </control>
    </control>
  </controls>
</window>