<?xml version="1.0" encoding="UTF-8"?>
<window id="34">
  <defaultcontrol always="true">5100</defaultcontrol>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>

  <controls>
    <include>Global_Background</include>

    <control type="group" id="5000">
      <centertop>50%</centertop>
      <left>SettingsProfileLeft</left>
      <width>SettingsProfileWidth</width>
      <height>SettingsProfileHeight</height>

      <include>Animation_ZoomInZoomOut</include>
      <include>Animation_ZoomedByMenu</include>
      <animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(progressdialog) | Window.IsActive(okdialog)">
        <include>AnimationEffect_ZoomedBy</include>
      </animation>

      <control type="image">
        <width>SettingsProfileWidth</width>
        <height>SettingsProfileHeight</height>
        <visible>!Control.IsVisible(8800)</visible>
        <texture>settings/settings-profile-bg.png</texture>
      </control>
      <control type="image">
        <width>SettingsProfileWidth</width>
        <height>SettingsProfileHeight</height>
        <visible>Control.IsVisible(8800)</visible>
        <texture>settings/settings-profile-bg-scrollbar.png</texture>
      </control>

      <control type="group">
        <left>160</left>

        <!-- Left list -->
        <control type="list" id="5100">
          <left>SettingsProfileLeftListLeft</left>
          <top>SettingsProfileListTop</top>
          <width>SettingsProfileLeftListWidth</width>
          <height>SettingsProfileListHeight</height>
          <itemgap>0</itemgap>
          <onright>5200</onright>
          <orientation>vertical</orientation>
          <scrolltime tween="sine" easing="out">320</scrolltime>

          <itemlayout width="370" height="66">
            <control type="label">
              <label>$INFO[ListItem.Label]</label>
              <include>SettingsProfileLeftListTemplate</include>
            </control>
          </itemlayout>
          <focusedlayout width="370" height="66">
            <control type="label">
              <textcolor>TextHeavy</textcolor>
              <label>$INFO[ListItem.Label]</label>
              <include>SettingsProfileLeftListTemplate</include>
              <animation effect="zoom" center="350,33" start="100" end="105" time="50" tween="cubic" easing="out">Focus</animation>
            </control>
          </focusedlayout>
          <content>
            <item id="1">
              <label>$LOCALIZE[20096]</label>
              <onclick>noop</onclick>
            </item>
            <item id="2">
              <label>$LOCALIZE[13200]</label>
              <onclick>noop</onclick>
            </item>
          </content>
        </control>

        <!-- Right (profile) list -->
        <control type="group" id="5200">
          <control type="list" id="2">
            <left>SettingsProfileRightListLeft</left>
            <top>SettingsProfileListTop</top>
            <width>SettingsProfileRightListWidth</width>
            <height>SettingsProfileListHeight</height>
            <onleft>5100</onleft>
            <onright>8800</onright>
            <pagecontrol>8800</pagecontrol>
            <orientation>vertical</orientation>
            <scrolltime tween="sine" easing="out">320</scrolltime>
            <visible>Container(5100).Hasfocus(2)</visible>

            <itemlayout width="1130" height="66">
              <control type="group">
                <height>66</height>
                <width>SettingsProfileRightListWidth</width>
                <control type="label">
                  <label>$INFO[ListItem.Label]</label>
                  <include>SettingsProfileRightListTemplate</include>
                </control>
                <control type="label">
                  <align>right</align>
                  <label>$INFO[ListItem.Label2]</label>
                  <include>SettingsProfileRightListTemplate</include>
                  <visible>!IsEmpty(ListItem.Label2)</visible>
                </control>
              </control>
            </itemlayout>
            <focusedlayout width="1130" height="66">
              <control type="group">
                <height>66</height>
                <width>SettingsProfileRightListWidth</width>
                <animation effect="zoom" center="450,33" start="100" end="105" time="50" tween="cubic" easing="out">Focus</animation>
                <visible>Control.HasFocus(2)</visible>
                <control type="label">
                  <textcolor>TextHeavy</textcolor>
                  <label>$INFO[ListItem.Label]</label>
                  <include>SettingsProfileRightListTemplate</include>
                </control>
                <control type="label">
                  <align>right</align>
                  <textcolor>TextHeavy</textcolor>
                  <label>$INFO[ListItem.Label2]</label>
                  <include>SettingsProfileRightListTemplate</include>
                  <visible>!IsEmpty(ListItem.Label2)</visible>
                </control>
              </control>
              <control type="group">
                <height>66</height>
                <width>SettingsProfileRightListWidth</width>
                <animation effect="zoom" center="450,33" start="100" end="105" time="50" tween="cubic" easing="out">Focus</animation>
                <visible>!Control.HasFocus(2)</visible>
                <control type="label">
                  <label>$INFO[ListItem.Label]</label>
                  <include>SettingsProfileRightListTemplate</include>
                </control>
                <control type="label">
                  <align>right</align>
                  <label>$INFO[ListItem.Label2]</label>
                  <include>SettingsProfileRightListTemplate</include>
                  <visible>!IsEmpty(ListItem.Label2)</visible>
                </control>
              </control>
            </focusedlayout>
          </control>

          <control type="grouplist" id="3">
            <left>SettingsProfileRightListLeft</left>
            <top>SettingsProfileListTop</top>
            <width>SettingsProfileRightListWidth</width>
            <height>SettingsProfileListHeight</height>
            <onleft>5100</onleft>
            <orientation>vertical</orientation>
            <scrolltime tween="sine" easing="out">320</scrolltime>
            <visible>Container(5100).Hasfocus(1)</visible>

            <control type="radiobutton" id="4">
              <include>SettingsProfileRightListTemplate</include>
              <label>$LOCALIZE[20096]</label>
            </control>
            <control type="button" id="5">
              <include>SettingsProfileRightListTemplate</include>
              <label>$LOCALIZE[33084]: $INFO[System.ProfileAutoLogin]</label>
              <enable>!System.HasLoginScreen</enable>
            </control>
          </control>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="8800">
          <left>1809</left>
          <top>52</top>
          <height>496</height>
          <onleft>5200</onleft>
          <visible>Control.IsVisible(2)</visible>
          <!-- <visible>Skin.HasSetting(AlaskaB.Settings.SettingsProfile.Scrollbar.Enable)</visible> -->
        </control>
      </control>


