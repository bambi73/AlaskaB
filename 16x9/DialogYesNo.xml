<?xml version="1.0" encoding="UTF-8"?>
<window id="100">
  <defaultcontrol always="true">8900</defaultcontrol>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>

  <controls>
    <control type="button" id="8900">
      <include>HiddenControl</include>
      <onfocus>SetFocus(10)</onfocus>
    </control>

    <control type="group" id="5000">
      <centertop>49%</centertop>
      <centerleft>50%</centerleft>
      <width>DialogConfirmWidth</width>
      <height>DialogConfirmHeight</height>
      <include>Animation_ZoomInMenu</include>
      <animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(progressdialog) | Window.IsActive(okdialog)">
        <include>AnimationEffect_ZoomedBy</include>
      </animation>

      <control type="image">
        <width>DialogConfirmWidth</width>
        <height>DialogConfirmHeight</height>
        <texture>dialogs/yesno-ok-bg.png</texture>
      </control>

      <control type="label" id="1">
        <top>37</top>
        <centerleft>50%</centerleft>
        <width>DialogConfirmControlWidth</width>
        <height>42</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>Font_Black_Caps_42</font>
      </control>
      <control type="textbox" id="9">
        <top>128</top>
        <centerleft>50%</centerleft>
        <width>DialogConfirmControlWidth</width>
        <height>130</height>
        <align>center</align>
        <font>Font_Light_Caps_34</font>
      </control>

      <control type="grouplist">
        <top>272</top>
        <include>DialogConfirmButtonGrouplist</include>
        <!-- Yes Button -->
        <control type="button" id="11">
          <include>DialogConfirmButtonLeft</include>
          <animation type="Conditional" condition="Control.HasFocus(11)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonLeftFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(11)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonLeftUnfocus</include>
          </animation>
        </control>
        <!-- No Button -->
        <control type="button" id="10">
          <include>DialogConfirmButtonRight</include>
          <animation type="Conditional" condition="Control.HasFocus(10)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonRightFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(10)" reversible="false">
            <include>AnimationEffect_DialogConfirmButtonRightUnfocus</include>
          </animation>
        </control>
      </control>
    </control>
  </controls>

</window>