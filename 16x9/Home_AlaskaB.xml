      <control type="fixedlist" id="8000">
        <width>HomeWidth</width>
        <height>HomeListHeight</height>
        <onup condition="!IsEmpty(Container(8000).ListItem.Property(upHeading))">SetProperty(AlaskaB.HeadingLabel,$INFO[Container(8000).ListItem.Property(upHeading)],home)</onup>
        <onup condition="!IsEmpty(Container(8000).ListItem.Property(upSubheading))">SetProperty(AlaskaB.SubheadingLabel,$INFO[Container(8000).ListItem.Property(upSubheading)],home)</onup>
        <onup condition="IsEmpty(Container(8000).ListItem.Property(upHeading))">ClearProperty(AlaskaB.HeadingLabel,home)</onup>
        <onup condition="IsEmpty(Container(8000).ListItem.Property(upSubheading))">ClearProperty(AlaskaB.SubheadingLabel,home)</onup>
        <onup condition="!IsEmpty(Container(8000).ListItem.Property(upAction))">$INFO[Container(8000).ListItem.Property(upAction)]</onup>
        <onup condition="!IsEmpty(Container(8000).ListItem.Property(upAction2))">$INFO[Container(8000).ListItem.Property(upAction2)]</onup>
        <onup condition="!IsEmpty(Container(8000).ListItem.Property(upAction3))">$INFO[Container(8000).ListItem.Property(upAction3)]</onup>
        <ondown condition="!IsEmpty(Container(8000).ListItem.Property(downHeading))">SetProperty(AlaskaB.HeadingLabel,$INFO[Container(8000).ListItem.Property(downHeading)],home)</ondown>
        <ondown condition="!IsEmpty(Container(8000).ListItem.Property(downSubheading))">SetProperty(AlaskaB.SubheadingLabel,$INFO[Container(8000).ListItem.Property(downSubheading)],home)</ondown>
        <ondown condition="IsEmpty(Container(8000).ListItem.Property(downHeading))">ClearProperty(AlaskaB.HeadingLabel,home)</ondown>
        <ondown condition="IsEmpty(Container(8000).ListItem.Property(downSubheading))">ClearProperty(AlaskaB.SubheadingLabel,home)</ondown>
        <ondown condition="!IsEmpty(Container(8000).ListItem.Property(downAction))">$INFO[Container(8000).ListItem.Property(downAction)]</ondown>
        <ondown condition="!IsEmpty(Container(8000).ListItem.Property(downAction2))">$INFO[Container(8000).ListItem.Property(downAction2)]</ondown>
        <ondown condition="!IsEmpty(Container(8000).ListItem.Property(downAction3))">$INFO[Container(8000).ListItem.Property(downAction3)]</ondown>
        
        <onclick condition="!IsEmpty(Container(8000).ListItem.Property(mainHeading))">SetProperty(AlaskaB.HeadingLabel,$INFO[Container(8000).ListItem.Property(mainHeading)],home)</onclick>
        <onclick condition="!IsEmpty(Container(8000).ListItem.Property(mainSubheading))">SetProperty(AlaskaB.SubheadingLabel,$INFO[Container(8000).ListItem.Property(mainSubheading)],home)</onclick>
        <onclick condition="IsEmpty(Container(8000).ListItem.Property(mainHeading))">ClearProperty(AlaskaB.HeadingLabel,home)</onclick>
        <onclick condition="IsEmpty(Container(8000).ListItem.Property(mainSubheading))">ClearProperty(AlaskaB.SubheadingLabel,home)</onclick>
        <onclick>Notification(XXX,BBB)</onclick>

        <focusposition>2</focusposition>
        <orientation>horizontal</orientation>
        <scrolltime tween="sine" easing="inout">350</scrolltime>

        <itemlayout width="531" height="450">
          <control type="group">
            <animation effect="zoom" center="265,225" time="0" start="100" end="84" condition="true">Conditional</animation>
            <control type="image">
              <include>HomeMainMenuIcon</include>
              <texture diffuse="home/main-menu-icon-matte.png">$INFO[ListItem.Property(backgroundProperty)]</texture>
            </control>
            <include>HomeMainMenuFrame</include>
            <control type="label">
              <include>HomeMainMenuLabel</include>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <include>HomeMainMenuLabelShade</include>
            <control type="image">
              <include>HomeMainMenuActionUp</include>
              <visible>!IsEmpty(ListItem.Property(upAction))</visible>
            </control>
            <control type="image">
              <include>HomeMainMenuActionDown</include>
              <visible>!IsEmpty(ListItem.Property(downAction))</visible>
            </control>
          </control>
        </itemlayout>
        <focusedlayout width="531" height="450">
          <control type="group">
            <animation effect="zoom" center="265,225" start="84" end="100" time="300" tween="cubic" easing="out" condition="IsEmpty(Window(Home).Property(AlaskaB.Home.WindowOpen))">Focus</animation>
            <control type="image">
              <include>HomeMainMenuIcon</include>
              <texture diffuse="home/main-menu-icon-matte.png">$INFO[ListItem.Property(backgroundProperty)]</texture>
            </control>
            <include>HomeMainMenuFrame</include>
            <control type="label">
              <include>HomeMainMenuLabel</include>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <include>HomeMainMenuLabelShade</include>
            <control type="image">
              <include>HomeMainMenuActionUp</include>
              <visible>!IsEmpty(ListItem.Property(upAction))</visible>
            </control>
            <control type="image">
              <include>HomeMainMenuActionDown</include>
              <visible>!IsEmpty(ListItem.Property(downAction))</visible>
            </control>
          </control>
          <control type="button">
            <include>HiddenControl</include>
            <onfocus>ClearProperty(AlaskaB.Home.WindowOpen,home)</onfocus>
            <onfocus>SetProperty(AlaskaB.Home.SubsequentWindowOpen,1,home)</onfocus>
            <onfocus>AlarmClock(AlaskaB.Home.Multiimage.Timer,RunScript(special://skin/extras/scripts/alaskab_utils.py,updateHomeMenu),00:10,silent,loop)</onfocus>
          </control>
        </focusedlayout>
        <content>
          <include>skinshortcuts-mainmenu</include>
        </content>
      </control>
    </control>

