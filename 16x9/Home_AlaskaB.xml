      <control type="fixedlist" id="8000">
        <width>HomeWidth</width>
        <height>HomeListHeight</height>
        <onup condition="IntegerGreaterThan(Container(8300).NumItems,0) + !IsEmpty(Container(8300).ListItem(0).Property(path)) + !StringCompare(Container(8300).ListItem(0).Property(path),noop)">$INFO[Container(8300).ListItem(0).Property(path)]</onup>
        <ondown condition="IntegerGreaterThan(Container(8400).NumItems,0) + !IsEmpty(Container(8400).ListItem(0).Property(path)) + !StringCompare(Container(8400).ListItem(0).Property(path),noop)">$INFO[Container(8400).ListItem(0).Property(path)]</ondown>
        <focusposition>2</focusposition>
        <orientation>horizontal</orientation>
        <scrolltime tween="sine" easing="inout">350</scrolltime>

        <itemlayout width="531" height="450">
          <control type="group">
            <animation effect="zoom" center="265,225" time="0" start="100" end="84" condition="true">Conditional</animation>
            <control type="image">
              <include>HomeMainMenuIcon</include>
              <texture diffuse="home/main-menu-icon-matte.png">$INFO[ListItem.Property(backgroundProperty)]</texture>
            </control>
            <include>HomeMainMenuFrame</include>
            <control type="label">
              <include>HomeMainMenuLabel</include>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <include>HomeMainMenuLabelShade</include>
          </control>
        </itemlayout>
        <focusedlayout width="531" height="450">
          <control type="group">
            <animation effect="zoom" center="265,225" start="84" end="100" time="300" tween="cubic" easing="out" condition="IsEmpty(Window(Home).Property(AlaskaB.Home.WindowOpen))">Focus</animation>
            <control type="image">
              <include>HomeMainMenuIcon</include>
              <texture diffuse="home/main-menu-icon-matte.png">$INFO[ListItem.Property(backgroundProperty)]</texture>
            </control>
            <include>HomeMainMenuFrame</include>
            <control type="label">
              <include>HomeMainMenuLabel</include>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <include>HomeMainMenuLabelShade</include>
            <control type="image">
              <include>HomeMainMenuActionUp</include>
              <visible>IntegerGreaterThan(Container(8300).NumItems,0) + !IsEmpty(Container(8300).ListItem(0).Property(path)) + !StringCompare(Container(8300).ListItem(0).Property(path),noop)</visible>
            </control>
            <control type="image">
              <include>HomeMainMenuActionDown</include>
              <visible>IntegerGreaterThan(Container(8400).NumItems,0) + !IsEmpty(Container(8400).ListItem(0).Property(path)) + !StringCompare(Container(8400).ListItem(0).Property(path),noop)</visible>
            </control>
          </control>
          <control type="button">
            <include>HiddenControl</include>
            <onfocus>ClearProperty(AlaskaB.Home.WindowOpen,home)</onfocus>
            <onfocus>SetProperty(AlaskaB.Home.SubsequentWindowOpen,1,home)</onfocus>
            <onfocus>AlarmClock(AlaskaB.Home.Multiimage.Timer,RunScript(special://skin/extras/scripts/alaskab_utils.py,updateHomeMenu),00:10,silent,loop)</onfocus>
          </control>
        </focusedlayout>
        <content>
          <include>skinshortcuts-mainmenu</include>
        </content>
      </control>
    </control>

    <control type="list" id="8300">
