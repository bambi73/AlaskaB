<?xml version="1.0" encoding="UTF-8"?>
<window id="29">
  <defaultcontrol always="true">52</defaultcontrol>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>

  <controls>
    <include>Global_Background</include>

    <control type="group" id="5000">
      <centertop>49%</centertop>
      <centerleft>50%</centerleft>
      <width>LoginScreenWidth</width>
      <height>LoginScreenHeight</height>

      <include>Animation_ZoomInMenu</include>
      <animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(progressdialog) | Window.IsActive(okdialog) | Window.IsActive(contextmenu) | Window.IsActive(profilesettings)">
        <include>AnimationEffect_ZoomedBy</include>
      </animation>

      <control type="image">
        <width>LoginScreenWidth</width>
        <height>LoginScreenHeight</height>
        <visible>!Control.IsVisible(8800)</visible>
        <texture>dialogs/login-screen-bg.png</texture>
      </control>
      <control type="image">
        <width>LoginScreenWidth</width>
        <height>LoginScreenHeight</height>
        <visible>Control.IsVisible(8800)</visible>
        <texture>dialogs/login-screen-bg-scrollbar.png</texture>
      </control>

      <!-- Heading label -->
      <control type="label" id="2">
        <top>37</top>
        <centerleft>50%</centerleft>
        <width>LoginScreenControlWidth</width>
        <height>42</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>Font_Black_Caps_42</font>
      </control>

      <control type="group">
        <left>125</left>
        <top>116</top>

        <!-- Image -->
        <control type="image">
          <left>40</left>
          <top>22</top>
          <width>420</width>
          <height>365</height>
          <include>DialogBaseLeftImage_Image</include>
          <texture>$INFO[Container(52).ListItem.Icon]</texture>
          <visible>!IsEmpty(Container(52).ListItem.Icon) + !StringCompare(Container(52).ListItem.Icon,unknown-user.png)</visible>
        </control>
        <control type="image">
          <left>102</left>
          <top>27</top>
          <width>358</width>
          <height>355</height>
          <include>DialogBaseLeftImage_DefaultIcon</include>
          <texture colordiffuse="IconLight">dialogs/login-screen-defaultuser.png</texture>
          <visible>IsEmpty(Container(52).ListItem.Icon) | StringCompare(Container(52).ListItem.Icon,unknown-user.png)</visible>
        </control>

        <!-- Profiles list -->
        <control type="list" id="52">
          <left>560</left>
          <width>LoginScreenListWidth</width>
          <height>392</height>
          <onup>52</onup>
          <ondown>52</ondown>
          <include>DialogBaseVerticalListWithScrollbar</include>

          <itemlayout width="780" height="98">
            <control type="label">
              <include>LoginScreenListItemLine1</include>
              <selectedcolor>TextLight</selectedcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label">
              <include>LoginScreenListItemLine2</include>
              <selectedcolor>TextLight</selectedcolor>
              <label>$INFO[ListItem.Label2]</label>
            </control>
          </itemlayout>
          <focusedlayout width="780" height="98">
            <control type="label">
              <include>LoginScreenListItemLine1</include>
              <textcolor>TextHeavy</textcolor>
              <label>$INFO[ListItem.Label]</label>
              <visible>Control.HasFocus(52)</visible>
              <animation effect="zoom" center="120,33" start="100" end="105" time="50" tween="cubic" easing="out">Focus</animation>
            </control>
            <control type="label">
              <include>LoginScreenListItemLine2</include>
              <textcolor>TextHeavy</textcolor>
              <label>$INFO[ListItem.Label2]</label>
              <visible>Control.HasFocus(52)</visible>
              <animation effect="zoom" center="120,33" start="100" end="105" time="50" tween="cubic" easing="out">Focus</animation>
            </control>
            <control type="label">
              <include>LoginScreenListItemLine1</include>
              <textcolor>TextLight</textcolor>
              <label>$INFO[ListItem.Label]</label>
              <visible>!Control.HasFocus(52)</visible>
            </control>
            <control type="label">
              <include>LoginScreenListItemLine2</include>
              <textcolor>TextLight</textcolor>
              <label>$INFO[ListItem.Label2]</label>
              <visible>!Control.HasFocus(52)</visible>
            </control>
          </focusedlayout>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="8800">
          <top>17</top>
          <left>1420</left>
          <height>370</height>
          <onleft>52</onleft>
          <visible>Skin.HasSetting(AlaskaB.Settings.LoginScreen.Scrollbar.Enable)</visible>
        </control>
      </control>
    </control>
  </controls>

</window>