<?xml version="1.0" encoding="UTF-8"?>
<window id="130">
  <defaultcontrol always="true">5</defaultcontrol>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>

  <controls>
    <control type="group" id="5000">
      <centertop>49%</centertop>
      <centerleft>50%</centerleft>
      <width>DialogProfileSettingsWidth</width>
      <height>DialogProfileSettingsHeight</height>

      <include>Animation_ZoomInMenu</include>
      <animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(progressdialog) | Window.IsActive(okdialog) | Window.IsActive(virtualkeyboard) | Window.IsActive(filebrowser)">
        <include>AnimationEffect_ZoomedBy</include>
      </animation>

      <control type="image">
        <width>DialogProfileSettingsWidth</width>
        <height>DialogProfileSettingsHeight</height>
        <texture>dialogs/profile-settings-bg.png</texture>
      </control>

      <!-- Heading label -->
      <control type="label" id="2">
        <top>37</top>
        <centerleft>50%</centerleft>
        <width>DialogProfileSettingsControlWidth</width>
        <height>42</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>Font_Black_Caps_42</font>
      </control>
      
      <control type="group">
        <left>125</left>
        <top>122</top>

        <!-- Image -->
        <control type="image" id="101">
          <left>40</left>
          <top>20</top>
          <width>420</width>
          <height>355</height>
          <include>DialogBaseLeftImage_Image</include>
          <visible>!IsEmpty(Control.GetLabel(101))</visible>
        </control>

        <control type="grouplist" id="5">
          <left>550</left>
          <width>DialogProfileSettingsGLWidth</width>
          <height>396</height>
          <onleft>9010</onleft>
          <onright>9010</onright>
          <onup>noop</onup>
          <ondown>9010</ondown>
          <itemgap>0</itemgap>
          <orientation>vertical</orientation>
          <scrolltime tween="sine" easing="out">320</scrolltime>
        </control>
      </control>

      <control type="grouplist" id="9010">
        <include>DialogBottomButtonGrouplist</include>
        <width>DialogProfileSettingsControlWidth</width>
        <top>539</top>
        <onup>5</onup>
        <!-- OK -->
        <control type="button" id="28">
          <label>$LOCALIZE[20177]</label>
          <include>DialogBottomButton2Left</include>
          <animation type="Conditional" condition="Control.HasFocus(28)" reversible="false">
            <include>AnimationEffect_DialogBottomButton2LeftFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(28)" reversible="false">
            <include>AnimationEffect_DialogBottomButton2LeftUnfocus</include>
          </animation>
        </control>
        <!-- Cancel -->
        <control type="button" id="29">
          <label>$LOCALIZE[222]</label>
          <include>DialogBottomButton2Right</include>
          <animation type="Conditional" condition="Control.HasFocus(29)" reversible="false">
            <include>AnimationEffect_DialogBottomButton2RightFocus</include>
          </animation>
          <animation type="Conditional" condition="!Control.HasFocus(29)" reversible="false">
            <include>AnimationEffect_DialogBottomButton2RightUnfocus</include>
          </animation>
        </control>
      </control>
    </control>

    <control type="button" id="7">
      <include>DialogProfileSettingsGLTemplate</include>
    </control>
    <control type="radiobutton" id="8">
      <include>DialogProfileSettingsGLTemplateWithText</include>
    </control>
    <control type="spincontrolex" id="9">
      <include>DialogProfileSettingsGLTemplateWithText</include>
    </control>
  </controls>

</window>